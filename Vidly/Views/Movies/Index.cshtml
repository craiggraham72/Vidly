
@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Listing</h2>

@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-primary btn-lg" })

@if (!Model.Any())
{
    <p>We don't have any movie titles.</p>
}
else
{
    <br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>
                    <td>@movie.Genre.GenreName</td>
                </tr>
            }
        </tbody>
    </table>
}
